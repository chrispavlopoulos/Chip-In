<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_medium">

    <TextView
        android:id="@+id/event_countdown"
        android:text="02m 20d 12h 30m 16s"
        android:layout_width="wrap_content"
        android:background="@drawable/countdown_background"
        android:layout_marginTop="@dimen/padding_medium"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/company_feature_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleX=".75"
            android:scaleY=".75"
            android:tint="@color/white"
            android:src="@drawable/baseline_person_black_36" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_small"
            android:text="Featured Event"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/featured_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/padding_small"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="For the Lorax"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/featured_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/padding_medium"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Mr. Beast will be matching 100% of donations to TeamTrees that are made while this event is active."
        android:textColor="@color/white"
        android:textSize="15sp" />


</LinearLayout>