<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size_xxlarge"
    android:layout_marginLeft="@dimen/padding_large"
    android:layout_marginTop="@dimen/padding_medium"
    android:layout_marginBottom="@dimen/padding_medium"
    android:layout_marginRight="@dimen/padding_large"
    android:elevation="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/corner_radius_button">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/wrapper_org_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="48dp">

                    <ImageView
                        android:id="@+id/iv_org_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_person_black_24"
                        android:backgroundTint="@color/white" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/padding_xlarge"
                    android:layout_toEndOf="@id/wrapper_org_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_org_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/tv_org_cause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title" />


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_org_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Organization Name"
                android:textColor="@color/textColorPrimaryMuted"
                android:textSize="14sp"
                android:gravity="bottom"/>
        </LinearLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>